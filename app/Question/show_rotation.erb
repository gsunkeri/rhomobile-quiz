<div class="pageTitle">
	<h1><%= @question.title %></h1>
</div>

<div class="toolbar">
  <div class="leftItem backButton">
    <a href="<%= Rho::RhoConfig.start_path %>">Back</a>
  </div>
</div>

<div class="content">
	<% if @question.answer == 'true'%>
		You have already rotated your device to answer this question
	<% else %>

	<form method="POST" action="<%= url_for :action => :update %>">
		<input type="hidden" name="id" value="<%= @question.object %>"/>

		<h1 class="groupTitle"><%= @question.q %></h1>
		<ul>
			<li>
			<label for="question[answer]">I am not able to turn my device</label>
			<% if @question.answer == "fail" %> 
				<input type="checkbox" name="question[answer]" checked="checked" value="false"/>
			<% else %>
				<input type="checkbox" name="question[answer]" value="false"/>
			<% end %>
			</li>
		</ul>
		<input type="submit" class="standardButton" value="Answer" />
	</form>
	<% end %>
</div>
